.PHONY: help run dev

# Default target - show help
help:
	@echo "Available commands:"
	@echo "  make run  - Run the FastAPI application (uses run.sh)"
	@echo "  make dev  - Run the application in development mode with auto-reload (uses run-dev.sh)"
	@echo "  make help - Show this help message"

# Run the application using run.sh
run:
	@bash run.sh

# Run in development mode using run-dev.sh
dev:
	@bash run-dev.sh

